programa
{
	
	funcao inicio()
	{
		inteiro n1, n2, n3, n4
		inteiro media
		inteiro total

		escreva("Digite sua nota: ")
		leia(n1)

		escreva("Digite sua nota: ")
		leia(n2)

		escreva("Digite sua nota: ")
		leia(n3)

		escreva("Digite sua nota: ")
		leia(n4) 

		total = n1 + n2 + n3 + n4 
		media = total/4

		escreva("Sua nota final: ", media = total / 4)

		
	}
}
